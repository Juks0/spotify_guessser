{
  "name": "spotify-guesser-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:auth\" \"npm:dev:socket\" \"npm:db:check\"",
    "dev:auth": "tsx src/auth/authorize.ts",
    "dev:socket": "tsx src/server/server.ts",
    "db:check": "tsx src/scripts/check-database.ts",
    "build": "tsc -b",
    "start": "concurrently \"npm:start:auth\" \"npm:start:socket\"",
    "start:auth": "node --loader tsx src/auth/authorize.ts",
    "start:socket": "node --loader tsx src/server/server.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@supabase/supabase-js": "^2.57.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "querystring": "^0.2.1",
    "request": "^2.88.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/request": "^2.48.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "concurrently": "^9.2.1",
    "prisma": "^6.16.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1"
  }
}


